<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>

      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.PITDBUploadController">
         <children>
            <TabPane tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
              <tabs>
                <Tab fx:id="descriptionTab" text="Description" >
                  <content>
                      <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                AnchorPane.topAnchor="0.0">
                          <columnConstraints>
                              <ColumnConstraints percentWidth="100"/>

                          </columnConstraints>
                          <rowConstraints>
                              <RowConstraints vgrow="ALWAYS"/>
                              <RowConstraints vgrow="ALWAYS"/>
                              <RowConstraints/>
                          </rowConstraints>
                          <TextField fx:id="projectNameField" promptText="Name"/>
                          <TextField fx:id="projectSpeciesField" GridPane.rowIndex="1" promptText="Species"/>
                          <TextArea fx:id="projectDescriptionField" GridPane.rowIndex="2" promptText="Description"/>
                      </GridPane>
                  </content>
                </Tab>
                <Tab fx:id="filesTab" text="Files">
                     <content>
                        <TreeTableView fx:id="filesTree" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                          <columns>
                            <TreeTableColumn fx:id="filenameColumn"  text="Name" />
                            <TreeTableColumn fx:id="filesizeColumn"  text="Size" />
                              <TreeTableColumn fx:id="fileuploadedColumn" text="Uploaded" />
                          </columns>
                        </TreeTableView>
                     </content>
                </Tab>
              </tabs>
            </TabPane>
            <Button mnemonicParsing="false" onMouseClicked="#onUploadClick" text="Upload" />
         </children>
      </VBox>

